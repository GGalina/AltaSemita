{
  "compilerOptions": {
    "target": "ES6",                        // Target ES6 JavaScript
    "module": "ESNext",                     // Use ESNext modules
    "jsx": "react",                         // Enable JSX support
    "strict": true,                         // Enable strict type-checking
    "moduleResolution": "node",            // Resolve modules like Node.js
    "esModuleInterop": true,               // Allow default imports from CommonJS modules
    "skipLibCheck": true,                  // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true // Enforce consistent casing in imports
  },
  "include": ["src"], // Include the "src" folder in the compilation
  "exclude": ["node_modules"] // Exclude "node_modules" from compilation
}
